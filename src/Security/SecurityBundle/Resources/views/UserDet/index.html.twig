{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Usuarios</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Documento</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Area</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_security_userdet_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.documento }}</td>
                <td>{{ entity.primerNombre }}</td>
                <td>{{ entity.primerApellido }}</td>
                <td>{{ entity.area.nombre }}</td>
                <td>

                    <a href="{{ path('admin_security_userdet_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_security_user_new') }}">
               Nuevo
            </a>
        </li>
    </ul>
    {% endblock %}
