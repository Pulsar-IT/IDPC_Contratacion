{% extends '::base.html.twig' %}

{% block body -%}
    <h1>CDPs</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Objeto</th>
                <th>Valor</th>
                <th>Fecha CDP</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cdp_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numero }}</td>
                <td>{{ entity.objeto }}</td>
                <td>{{ entity.valor |number_format(2, ',', '.') }}</td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d') }}{% endif %}</td>
 
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cdp_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cdp_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('cdp_new') }}">
                nuevo
            </a>
        </li>
    </ul>
    {% endblock %}
