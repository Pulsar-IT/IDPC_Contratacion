{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Proyectos de Inversión IDPC</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Codigo</th>
                <th>Descipción</th>
                <th>Vigencia</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('proyectoinversion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.codigo }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.vigencia }}</td>
                <td>
                        <a href="{{ path('proyectoinversion_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('proyectoinversion_new') }}">
               Nuevo
            </a>
        </li>
    </ul>
    {% endblock %}
