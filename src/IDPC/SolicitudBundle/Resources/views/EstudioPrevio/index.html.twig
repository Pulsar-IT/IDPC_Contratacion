{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Estudios Previos</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Objeto</th>
                <th>Valor Contrato</th>
                <th>Plazo Meses</th>
                <th>Plazo Dias</th>
                <th>Created_at</th>
                <th>Update_at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('estudiosprevios_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.objeto }}</td>
                <td>{{ entity.valorContrato }}</td>
                <td>{{ entity.plazoMeses }}</td>
                <td>{{ entity.plazoDias }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updateat %}{{ entity.updateat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('estudiosprevios_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('estudiosprevios_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('estudiosprevios_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
