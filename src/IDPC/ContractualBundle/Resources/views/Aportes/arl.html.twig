{% extends '::baseaportes.html.twig' %}
{% block body -%}
       <table>
          {%if error %}     
      <div class="alert alert-danger">{{ error }}</div>
      {% endif %}    
   
     <form action="{{ path('aportes_updatearl', { 'id': entity.id }) }}" method="post" {{ form_enctype(arl_form) }}>
     <input type="hidden" name="_method" value="PUT" />
     {{ form_errors(arl_form) }}
    <tr>
     <td>Valor:</td>
     <td>{{ form_widget(arl_form.valor, {'attr': {'onblur': "this.value=this.value.replace('.','');this.value=this.value.replace(',','');if (this.value>0){covertirNumLetras(this.value,'pmer1');}"}}) }}</td>
    <tr/>
    <tr>
        <td>Valor en letras: </td>
        <td><div id="pmer1"></div></td>
    </tr>
    <tr>
        <td>Entidad ARL:</td>
        <td>{{ form_widget(arl_form.Referencia)}}</td>
    </tr>
     <tr>
        <td></td> 
        <td><button type="hidden" onclick="javascript:window.location.reload()" class="btn btn-sm btn-primary">Guardar</button></td>
    </tr>
      {{ form_widget(arl_form._token) }}
  </form>
</table>                 
{% endblock %}