{% extends '::base.html.twig' %}

{% block body -%}
<div class="page-header">
    	<h1>Contrato</h1>
		{# {% if is_granted("ROLE_ADMIN") %} #}
        <a href="{{ path('contrato_new') }}" class="btn btn-primary btn-mini"><i class="icon-plus icon-white"></i> Nuevo</a>{# {%endif%} #}
        <a href="{{ path('contrato') }}"class="btn btn-primary btn-mini"><i class="icon-plus icon-white"></i>Regresar</a>
        <a href="{{ path('contrato_edit', { 'id': entity.id }) }}"class="btn btn-primary btn-mini"><i class="icon-plus icon-white"></i>Editar</a>
        <a href="{{ path('pago_new') }}"class="btn btn-primary btn-mini"><i class="icon-plus icon-white"></i>Pagos</a>
                <br clear="all" />
	</div>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ entity.numero }}</td>
            </tr>
            <tr>
                <th>Fechainicio</th>
                <td>{{ entity.fechaInicio|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Update_at</th>
                <td>{{ entity.updateat|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">

    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
